// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Profile {
  id       Int    @id @default(autoincrement())
  fastName String
  lastName String
  city     String
}

model Post {
  id          Int    @id @default(autoincrement())
  title       String
  description String
}
